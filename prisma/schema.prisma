datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Office {
  id     Int    @id @default(autoincrement())
  name   String
  salary Float

  users User[]

  @@map("office")
}

enum Role {
  USER
  ADMIN
}

model Login {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  @@map("login")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  image       String
  sex         Boolean
  register    DateTime @default(now())
  amountSales Int      @default(0)
  address     String

  login Login?

  officeId Int
  office   Office @relation(fields: [officeId], references: [id])

  @@index([officeId])
}
